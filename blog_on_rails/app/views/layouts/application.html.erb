<!DOCTYPE html>
<html>
  <head>
    <title>BlogOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  
  <body>
    <header>
     <nav class="navbar navbar-expand navbar-light bg-light">
       <div class="navbar-brand text-primary">
         <%= link_to("Blog On Rails", "/")%>
       </div>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
       </button>
       <div class="navbar-collapse d-flex flex-row-reverse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <div class="nav-link text-primary">
                    <%= link_to("Home", "/")%>
                    </div>
                </li>
                <li class="nav-item">
                    <div class="nav-link text-primary">
                    <%= link_to("New Posts", "/posts/new")%>
                    </div>
                </li>
                <%if user_signed_in?%>
                <li class="nav-item">
                  <div class="nav-link text-primary" >
                    Hello <%= link_to(current_user.name, user_path(current_user.id)) %> -
                    <%= link_to "Logout", "/session",
                          method: :delete,
                          data: {confirm: "are you sure you want to log out?"} %>
                  </div>
                 <%else%>
                  <div class="nav-link text-primary" >
                    <%= link_to "Sign In", new_session_path %>
                  </div>
                  <div class="nav-link text-primary" >
                    <%= link_to "Sign Up", new_user_path %>
                  </div>
                 </li>
                <% end %>
            </ul>
        </div>
      </nav>
    </header>
      <main class="container-fluid mt-3">
        <% flash.each do |type, message|%>
          <div class="alert alert-<%= type%>">
            <%= message %>
          </div>
        <% end %>
        </main>

        <%= yield %>
  </body>
</html>
