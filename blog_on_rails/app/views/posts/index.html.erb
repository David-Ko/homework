<div class="container-fluid p-3">
  <div class="row">
    <% @posts.each do |post|%>
      <div class="container col-sm-12 col-md-6 col-lg-4 p-3">
        <div class="border rounded p-3">
          <h4 class="text-truncate"><%= link_to(post.title, "/posts/#{post.id}")%></h4>
          <p class="text-truncate"><%=post.body%></p>
          <small>Posted <%= time_ago_in_words(post.created_at)%> ago </small>
        </div>
      </div>
    <%end%>
   </div>
</div>


